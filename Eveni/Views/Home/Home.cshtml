@using Web.ViewModels.Products
@using ApplicationCore.Entities.Enums
@{
        var data = (List<ProductViewModel>)ViewData["Products"];
    var fashion = CategoryEnum.Fashion;

}
@foreach (var item in data)
{
    if (item.Category.Equals(fashion))
    {
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="thumbnail">
                    <label>Name: </label>
                    <img src="@item.Picture" alt="...">
                    <h4>@item.Name </h4>

                    <a asp-controller="ReceiptMannager" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="Cart" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                    <a asp-controller="Cart" asp-action="Buy" asp-route-id="@item.Id" class="btn btn-primary">Buy</a>

                </div>
            </div>
        </div>
        }

    }



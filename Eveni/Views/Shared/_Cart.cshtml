    var itemsCount = 0;
    if(ViewBag.cart != null)
    {

         itemsCount = ViewBag.cart.Count;
    }
}
<div id="cart"  style="float:right">
    <a asp-controller="Cart" asp-action="Index" aria-label="View your shopping cart">
        <i class="fas fa-shopping-cart"></i>
        <span>
           @itemsCount
        </span>
    </a>
</div>


